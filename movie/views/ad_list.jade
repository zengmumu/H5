extends layout
block content
   .container
      .row
         h1 修改添加电影

         span #{user.name}
         a(href="/logout") 退出
         table.table.table-striped.table-hover
            tr
               th 电影名称
               th 修改
               th 删除
            each item in movies
               tr
                  td
                     a(href='/detail/#{item._id}') #{item.title}
                  td
                     a.btn.btn-success(href="/admin/update/#{item._id}")  修改
                  td
                     button.btn.btn-danger(data-id="#{item._id}") 删除
   script(src="/js/delete.js")
