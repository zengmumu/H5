extends layout
block content
   .container
      .row
         h1 #{title}
         each item in movies
            .col-sm-6.col-md-4.col-lg-3
               .thumbnail
                  a(href='/detail/#{item._id}')
                     img(src='#{item.picUrl}')
                  h3.text-center
                     a(href='/detail/#{item._id}', title='', target='_blank') #{item.title}
