extends layout
block content
   .container
      .row
         h1 添加电影
         .col-md-6
            form.form-horizontal(action='/admin/new' method='post' enctype="multipart/form-data")
               .form-group
                  label.col-md-2 影片名称
                  .col-md-10
                     input.form-control(type='text', name='title')
               .form-group
                  label.col-md-2 海报
                  .col-md-5
                     input.form-control(type='text', name='picUrl')
                  .col-md-5
                     input.form-control(type='file', name='image')
               .form-group
                  label.col-md-2 影片链接
                  .col-md-10
                     input.form-control(type='text', name='videoUrl')
               .form-group
                  .col-md-10.col-md-offset-2
                     input.btn.btn-success.btn-block(type='submit', value='提交')
